<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:background="@drawable/background2"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="No. MC"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mcTV"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold" android:textSize="18sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/namaTV"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Nama"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/namaTV"
            app:layout_constraintTop_toTopOf="@+id/mcTV"
            app:layout_constraintBottom_toBottomOf="@+id/mcTV" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textColor="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>